<?xml version="1.0" encoding="UTF-8" ?>
<language id="lua" name="Lua" extension="*.lua">
	<format type="keywords" weight="bold" foreground="#000088">
		and       break     do        else      elseif    end
		false     for       function  goto      if        in
		local     nil       not       or        repeat    return
		then      true      until     while
	</format>
	<format type="keywords" weight="bold">
		true false nil
	</format>
	<format foreground="#0000FF">\b[A-Za-z_][A-Za-z0-9_]+\s*(?=\()</format>
	<format minimal="true" foreground="#008800">".*"</format>
	<format italic="true" foreground="#008800">--.*$</format>
	<block start="--\[\[" end="\]\]" foreground="#008800" />
</language>
